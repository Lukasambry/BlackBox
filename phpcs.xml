<?xml version="1.0"?>
<ruleset name="BlackboxLintConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>Custom config for Blackbox lint</description>

    <rule ref="PSR12">
        <exclude name="PSR12.Files.FileHeader.Missing"/>
        <exclude name="PSR12.Classes.ClassDeclaration.MissingDocComment"/>
        <exclude name="PSR12.Methods.MethodDeclaration.MissingDocComment"/>
    </rule>
</ruleset>
