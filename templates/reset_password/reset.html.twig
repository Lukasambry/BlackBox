{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="card p-8 w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Reset your password</h1>

            {{ form_start(resetForm) }}
            {{ form_row(resetForm.email, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-lg bg-gray-800 border-gray-700 text-white px-4 py-2 focus:ring-2 focus:ring-purple-500 focus:border-transparent',
                    'autocomplete': 'email'
                },
                'label_attr': {
                    'class': 'block text-sm font-medium text-gray-300 mb-1'
                }
            }) }}

            <button type="submit" class="w-full btn-primary text-white rounded-lg py-2 px-4 mt-4">
                Reset password
            </button>
            {{ form_end(resetForm) }}

            <p class="mt-4 text-center text-sm text-gray-400">
                Remember your password?
                <a href="{{ path('app_login') }}" class="text-purple-400 hover:text-purple-300">
                    Sign in
                </a>
            </p>
        </div>
    </div>
{% endblock %}