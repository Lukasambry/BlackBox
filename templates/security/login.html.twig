{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="min-h-[80vh] flex items-center justify-center">
        <div class="card p-8 w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>

            {% if error %}
                <div class="bg-red-500 text-white p-3 rounded-lg mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {{ form_start(loginForm) }}
            {{ form_row(loginForm.email) }}
            {{ form_row(loginForm.password) }}
            {{ form_row(loginForm._remember_me) }}

            <button type="submit" class="w-full btn-primary text-white rounded-lg py-2">
                Sign in
            </button>
            {{ form_end(loginForm) }}

            <p class="mt-4 text-center text-sm text-gray-400">
                Don't have an account?
                <a href="{{ path('app_register') }}" class="text-purple-400 hover:text-purple-300">Register</a>
            </p>
            <p class="mt-4 text-center text-sm text-gray-400">
                <a href="{{ path('app_forgot_password_request') }}" class="text-purple-400 hover:text-purple-300">
                    Forgot your password?
                </a>
            </p>
        </div>
    </div>
{% endblock %}
