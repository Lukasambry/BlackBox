{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
    <div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="card p-8 w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Sign in</h1>

            {% if error %}
                <div class="bg-red-500/10 text-red-400 p-3 rounded-lg mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {{ form_start(loginForm) }}
            <div class="space-y-4">
                {{ form_row(loginForm.email) }}
                {{ form_row(loginForm.password) }}
                <div class="flex items-center">
                    {{ form_widget(loginForm.remember_me) }}
                    {{ form_label(loginForm.remember_me) }}
                </div>
                <button type="submit" class="w-full btn-primary text-white rounded-lg py-2">
                    Sign in
                </button>
            </div>
            {{ form_end(loginForm) }}

            <p class="mt-4 text-center text-sm text-gray-400">
                Don't have an account?
                <a href="{{ path('app_register') }}" class="text-purple-400 hover:text-purple-300">Register</a>
            </p>
            <p class="mt-4 text-center text-sm text-gray-400">
                <a href="{{ path('app_forgot_password_request') }}" class="text-purple-400 hover:text-purple-300">
                    Forgot your password?
                </a>
            </p>
        </div>
    </div>
{% endblock %}