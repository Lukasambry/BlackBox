{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="min-h-screen">
        <div class="min-h-screen flex items-center justify-center px-6">
            <!-- Decorative Elements -->
            <div class="absolute inset-0 overflow-hidden">
                <div class="absolute w-[500px] h-[500px] -left-40 bg-indigo-500/20 rounded-full blur-3xl"></div>
                <div class="absolute w-[500px] h-[500px] -right-40 bg-fuchsia-500/20 rounded-full blur-3xl"></div>
            </div>

            <!-- Login Form -->
            <div class="relative w-full max-w-md">
                <div class="relative p-8 rounded-2xl backdrop-blur-xl border border-white/10 bg-white/5">
                    <!-- Logo/Brand -->
                    <div class="flex justify-center mb-8">
                        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 via-fuchsia-500 to-rose-500 p-0.5">
                            <div class="w-full h-full bg-black rounded-lg flex items-center justify-center">
                                <span class="text-2xl font-bold text-white">S</span>
                            </div>
                        </div>
                    </div>

                    <h1 class="text-2xl font-bold text-white text-center mb-8">Welcome Back</h1>

                    {% if error %}
                        <div class="mb-6 p-4 rounded-xl bg-rose-500/20 backdrop-blur-sm border border-rose-500/20">
                            <p class="text-rose-200 text-sm">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </p>
                        </div>
                    {% endif %}

                    {{ form_start(loginForm) }}
                    <div class="space-y-6">
                        <!-- Email -->
                        <div>
                            {{ form_label(loginForm.email, 'Email', {'label_attr': {'class': 'text-sm font-medium text-white/70 mb-2 block'}}) }}
                            {{ form_widget(loginForm.email, {'attr': {
                                'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/30 focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all',
                                'placeholder': 'Enter your email'
                            }}) }}
                        </div>

                        <!-- Password -->
                        <div>
                            {{ form_label(loginForm.password, 'Password', {'label_attr': {'class': 'text-sm font-medium text-white/70 mb-2 block'}}) }}
                            {{ form_widget(loginForm.password, {'attr': {
                                'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/30 focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all',
                                'placeholder': 'Enter your password'
                            }}) }}
                        </div>

                        <!-- Remember Me -->
                        <div class="flex items-center">
                            {{ form_widget(loginForm._remember_me, {'attr': {
                                'class': 'rounded border-white/10 bg-white/5 text-fuchsia-500 focus:ring-2 focus:ring-fuchsia-500'
                            }}) }}
                            {{ form_label(loginForm._remember_me, 'Remember me', {'label_attr': {
                                'class': 'ml-2 text-sm text-white/70'
                            }}) }}
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="w-full py-3 rounded-xl bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500 text-white font-medium hover:shadow-lg hover:shadow-white/10 transition-all">
                            Sign In
                        </button>
                    </div>
                    {{ form_end(loginForm) }}

                    <!-- Links -->
                    <div class="mt-6 space-y-4 text-center">
                        <p class="text-white/50 text-sm">
                            Don't have an account?
                            <a href="{{ path('app_register') }}" class="text-fuchsia-400 hover:text-fuchsia-300 transition-colors">
                                Register
                            </a>
                        </p>
                        <a href="{{ path('app_forgot_password_request') }}" class="block text-sm text-white/50 hover:text-white transition-colors">
                            Forgot your password?
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}