{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen">
        <div class="min-h-screen flex items-center justify-center px-6 pt-12">
            <!-- Decorative Elements -->
            <div class="absolute inset-0 overflow-hidden">
                <div class="absolute w-[500px] h-[500px] -left-40 bg-indigo-500/20 rounded-full blur-3xl"></div>
                <div class="absolute w-[500px] h-[500px] -right-40 bg-fuchsia-500/20 rounded-full blur-3xl"></div>
            </div>

            <!-- Register Form -->
            <div class="relative w-full max-w-md">
                <div class="relative p-8 rounded-2xl backdrop-blur-xl border border-white/10 bg-white/5">
                    <!-- Logo/Brand -->
                    <div class="flex justify-center mb-8">
                        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-500 via-fuchsia-500 to-rose-500 p-0.5">
                            <div class="w-full h-full bg-black rounded-lg flex items-center justify-center">
                                <span class="text-2xl font-bold text-white">S</span>
                            </div>
                        </div>
                    </div>

                    <h1 class="text-2xl font-bold text-white text-center mb-8">Create Account</h1>

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="mb-6 p-4 rounded-xl bg-rose-500/20 backdrop-blur-sm border border-rose-500/20">
                            <p class="text-rose-200 text-sm">{{ flash_error }}</p>
                        </div>
                    {% endfor %}

                    {% if form_errors(registrationForm) %}
                        <div class="mb-6 p-4 rounded-xl bg-rose-500/20 backdrop-blur-sm border border-rose-500/20">
                            <p class="text-rose-200 text-sm">{{ form_errors(registrationForm) }}</p>
                        </div>
                    {% endif %}

                    {{ form_start(registrationForm) }}
                    <div class="space-y-6">
                        <!-- Nickname -->
                        <div>
                            {{ form_label(registrationForm.nickname, 'Nickname', {'label_attr': {'class': 'text-sm font-medium text-white/70 mb-2 block'}}) }}
                            {{ form_widget(registrationForm.nickname, {'attr': {
                                'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/30 focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all',
                                'placeholder': 'Choose a nickname'
                            }}) }}
                        </div>

                        <!-- Email -->
                        <div>
                            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'text-sm font-medium text-white/70 mb-2 block'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {
                                'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/30 focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all',
                                'placeholder': 'Enter your email'
                            }}) }}
                        </div>

                        <!-- Password -->
                        <div>
                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'text-sm font-medium text-white/70 mb-2 block'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {
                                'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/30 focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all',
                                'placeholder': 'Choose a password'
                            }}) }}
                        </div>

                        <!-- Confirm Password -->
                        <div>
                            {{ form_label(registrationForm.confirmPassword, 'Confirm Password', {'label_attr': {'class': 'text-sm font-medium text-white/70 mb-2 block'}}) }}
                            {{ form_widget(registrationForm.confirmPassword, {'attr': {
                                'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white placeholder-white/30 focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all',
                                'placeholder': 'Confirm your password'
                            }}) }}
                        </div>

                        <!-- Terms -->
                        <div class="flex items-center">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {
                                'class': 'rounded border-white/10 bg-white/5 text-fuchsia-500 focus:ring-2 focus:ring-fuchsia-500'
                            }}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {
                                'class': 'ml-2 text-sm text-white/70'
                            }}) }}
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="w-full py-3 rounded-xl bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500 text-white font-medium hover:shadow-lg hover:shadow-white/10 transition-all">
                            Create Account
                        </button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <!-- Links -->
                    <div class="mt-6 text-center">
                        <p class="text-white/50 text-sm">
                            Already have an account?
                            <a href="{{ path('app_login') }}" class="text-fuchsia-400 hover:text-fuchsia-300 transition-colors">
                                Sign in
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}