    <!-- CTA -->
    {% if not app.user %}
        <section class="py-24 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/20 via-fuchsia-500/20 to-rose-500/20 backdrop-blur-xl"></div>
            <div class="relative max-w-7xl mx-auto px-6 text-center">
                <h2 class="text-4xl font-bold text-white mb-6">Start Your Story Today</h2>
                <p class="text-xl text-white/70 mb-8 max-w-2xl mx-auto">Join thousands of storytellers already sharing their experiences on Silent.</p>
                <a href="{{ path('app_register') }}" class="inline-block px-8 py-4 rounded-xl bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500 text-white font-medium hover:shadow-lg hover:shadow-white/10 transition-all">
                    Create Free Account
                </a>
            </div>
        </section>
    {% endif %}

        <!-- Testimonials -->
        <section class="py-24">
            <div class="max-w-7xl mx-auto px-6">
                <div class="flex items-center gap-4 mb-16">
                    <span class="text-sm font-medium text-white/50 uppercase tracking-wider">Testimonials</span>
                    <div class="h-px flex-1 bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {% for testimonial in [
                        {name: 'Sarah K.', role: 'Writer', quote: 'Silent has transformed how I share my stories with friends.'},
                        {name: 'Mike R.', role: 'Teacher', quote: 'Perfect for creative writing exercises with my students.'},
                        {name: 'Lisa M.', role: 'Content Creator', quote: 'The perfect platform for building a storytelling community.'}
                    ] %}
                        <div class="p-8 rounded-2xl border border-white/10 bg-white/5">
                            <p class="text-white/70 mb-6">"{{ testimonial.quote }}"</p>
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-fuchsia-500"></div>
                                <div>
                                    <div class="font-medium text-white">{{ testimonial.name }}</div>
                                    <div class="text-sm text-white/50">{{ testimonial.role }}</div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
