{% extends 'base.html.twig' %}

{% block title %}Silent - Share Stories{% endblock %}

{% block body %}
    <!-- Hero -->
    {% if app.user and is_granted('ROLE_BANNED') %}
        <div class="bg-red-100 w-full h-screen text-red-700 p-4 rounded-lg shadow-md mb-8 flex items-center justify-center flex-col text-3xl">
            <p>Votre compte a été banni.</p>
            <a href="{{ path('app_logout') }}"
               class="mt-8 px-4 py-4 rounded-xl hover:bg-red-600 hover:underline hover:text-white text-red-500 transition-all">Logout</a>
        </div>
    {% else %}
        <section class="relative">
            <div class="absolute inset-0 overflow-hidden">
                <div class="absolute w-[500px] h-[500px] -top-40 -left-40 bg-indigo-500/30 rounded-full blur-3xl"></div>
                <div class="absolute w-[500px] h-[500px] top-40 -right-40 bg-fuchsia-500/30 rounded-full blur-3xl"></div>
            </div>

            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
                <div class="relative max-w-7xl mx-auto flex flex-col gap-8 justify-center py-32 h-fit md:h-screen md:py-0">
                    <!-- Content -->
                    <div class="relative text-center">
                        <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/5 backdrop-blur-sm border border-white/10 mb-6">
                        <span class="text-sm font-medium bg-gradient-to-r from-indigo-400 to-fuchsia-400 text-transparent bg-clip-text">
                            🎲 Share Stories, Create Memories
                        </span>
                        </div>

                        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8">
                            <span class="text-white">Share Anonymous</span>
                            <span class="bg-gradient-to-r from-indigo-400 via-fuchsia-400 to-rose-400 text-transparent bg-clip-text">Stories</span>
                        </h1>

                        <p class="max-w-3xl mx-auto text-xl text-white/70 mb-12">
                            Silent is a playful platform where creativity meets anonymity. Dive into themed storytelling
                            games, vote on hilarious anecdotes, and discover the unexpected.
                        </p>

                        <div class="flex flex-col sm:flex-row justify-center gap-6">
                            {% if not app.user %}
                                <a href="{{ path('app_register') }}"
                                   class="group relative px-8 py-4 bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500 rounded-full overflow-hidden">
                            <span class="relative z-10 text-lg font-medium text-white flex items-center justify-center gap-2">
                                Get Started
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </span>
                                </a>
                            {% endif %}
                            <a href="{{ path('app_room_index') }}"
                               class="px-8 py-4 rounded-lg bg-white/5 hover:bg-white/10 border border-white/10 text-lg font-medium text-white transition-all">
                                Browse Rooms
                            </a>
                        </div>
                    </div>

                    <!-- Features -->
                    <div class="relative grid grid-cols-1 md:grid-cols-3 gap-8">
                        <div class="group">
                            <div class="flex items-center gap-4">
                                <div class="h-px flex-1 bg-white/10 group-hover:bg-indigo-500 transition-all"></div>
                                <span class="text-white/50 text-sm">01</span>
                            </div>
                            <div class="relative mt-6 p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10">
                                <div class="w-12 h-12 mb-4 rounded-full bg-indigo-500/20 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-400" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <h3 class="text-xl font-semibold text-white mb-2">Themed Challenges</h3>
                                <p class="text-white/70">Engage with unique, thought-provoking themes that spark
                                    creativity and laughter.</p>
                            </div>
                        </div>

                        <div class="group">
                            <div class="flex items-center gap-4">
                                <div class="h-px flex-1 bg-white/10 group-hover:bg-fuchsia-500 transition-all"></div>
                                <span class="text-white/50 text-sm">02</span>
                            </div>
                            <div class="relative mt-6 p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10">
                                <div class="w-12 h-12 mb-4 rounded-full bg-fuchsia-500/20 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-fuchsia-400" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                                    </svg>
                                </div>
                                <h3 class="text-xl font-semibold text-white mb-2">Anonymous Sharing</h3>
                                <p class="text-white/70">Share your most hilarious and embarrassing moments without
                                    revealing your identity.</p>
                            </div>
                        </div>

                        <div class="group">
                            <div class="flex items-center gap-4">
                                <div class="h-px flex-1 bg-white/10 group-hover:bg-rose-500 transition-all"></div>
                                <span class="text-white/50 text-sm">03</span>
                            </div>
                            <div class="relative mt-6 p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10">
                                <div class="w-12 h-12 mb-4 rounded-full bg-rose-500/20 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-rose-400" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                    </svg>
                                </div>
                                <h3 class="text-xl font-semibold text-white mb-2">Community Voting</h3>
                                <p class="text-white/70">Vote on stories, crown the most entertaining anecdotes, and
                                    laugh together.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <!-- How it Works -->
        <section id="how-it-works" class="py-24 relative bg-black/20">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center max-w-2xl mx-auto mb-16">
                    <h2 class="text-3xl font-bold text-white mb-4">How Silent Works</h2>
                    <p class="text-white/70">Follow these simple steps to start sharing your stories with the world.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
                    {% for step in [
                        {num: '01', title: 'Create Account', desc: 'Sign up in seconds', color: 'from-indigo-500 to-indigo-600'},
                        {num: '02', title: 'Join or Create Room', desc: 'Find your space', color: 'from-fuchsia-500 to-fuchsia-600'},
                        {num: '03', title: 'Share Stories', desc: 'Express yourself', color: 'from-rose-500 to-rose-600'},
                        {num: '04', title: 'Engage & Connect', desc: 'Build community', color: 'from-indigo-500 to-fuchsia-500'}
                    ] %}
                        <div class="relative flex flex-col items-center text-center">
                            <div class="w-12 h-12 rounded-full bg-gradient-to-br {{ step.color }} flex items-center justify-center text-white font-medium mb-4">
                                {{ step.num }}
                            </div>
                            <h3 class="text-xl font-semibold text-white mb-2">{{ step.title }}</h3>
                            <p class="text-white/70">{{ step.desc }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <div class="max-w-7xl mx-auto px-6 py-24">
        <!-- Header -->
        <div class="flex justify-between items-end mb-12">
            <div class="flex-1">
                <div class="flex items-center gap-4">
                    <span class="text-sm font-medium text-white/50 uppercase tracking-wider">Available Rooms</span>
                    <div class="h-px flex-1 bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500"></div>
                </div>
            </div>
        </div>
        {% if app.user %}
            <!-- Rooms Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for room in rooms %}
                    <div class="group relative">
                        <!-- Background Effects -->
                        <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent opacity-0 group-hover:opacity-100 rounded-2xl transition-all duration-300"></div>

                        <!-- Card Content -->
                        <div class="relative p-6 rounded-2xl border border-white/10 backdrop-blur-sm">
                            <!-- Room Status Badge -->
                            {% set statusColors = {
                                'waiting': 'from-emerald-400 to-teal-400',
                                'starting': 'from-amber-400 to-orange-400',
                                'playing': 'from-blue-400 to-indigo-400',
                                'voting': 'from-purple-400 to-fuchsia-400',
                                'finished': 'from-gray-400 to-slate-400'
                            } %}
                            <div class="flex justify-between items-start mb-4">
                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r {{ statusColors[room.currentState] }}">
                        {{ room.currentState|capitalize }}
                        {% if room.remainingTime %}
                            ({{ room.remainingTime }}s)
                        {% endif %}
                    </span>
                                {% if not room.isPrivate %}
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-white/10 text-white">Public</span>
                                {% endif %}
                            </div>

                            <!-- Room Info -->
                            <h3 class="text-xl font-semibold text-white mb-2">{{ room.name }}</h3>

                            <!-- Host & Players -->
                            <div class="space-y-3 mb-6">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-gradient-to-br from-indigo-500 to-fuchsia-500 flex items-center justify-center">
                                        <span class="text-sm font-bold text-white">{{ room.owner.nickname|first|upper }}</span>
                                    </div>
                                    <div>
                                        <span class="text-white/70 text-sm">Hosted by</span>
                                        <span class="text-white font-medium ml-1">{{ room.owner.nickname }}</span>
                                    </div>
                                </div>

                                <!-- Players Count -->
                                <div class="flex items-center justify-between text-sm">
                                    <div class="flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white/50"
                                             viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                        </svg>
                                        <span class="text-white/70">{{ room.players|length }}/{{ room.maxCapacity }} players</span>
                                    </div>

                                    <!-- Created Time -->
                                    <span class="text-white/50">
                            room.createdAt
                        </span>
                                </div>
                            </div>

                            <!-- Join Button -->
                            {% if room.currentState == 'waiting' and room.players|length < room.maxCapacity %}
                                <a href="{{ path('app_room_join', {'inviteCode': room.inviteCode}) }}"
                                   class="w-full flex items-center justify-center gap-2 px-4 py-2 rounded-xl bg-white/10 text-white hover:bg-white/20 transition-all">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24"
                                         fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                                    </svg>
                                    Join Room
                                </a>
                            {% else %}
                                <button disabled
                                        class="w-full px-4 py-2 rounded-xl bg-white/5 text-white/50 cursor-not-allowed">
                                    {% if room.players|length >= room.maxCapacity %}
                                        Room Full
                                    {% else %}
                                        Game in Progress
                                    {% endif %}
                                </button>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-full">
                        <div class="text-center py-12">
                            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-white/5 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/50"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
                                </svg>
                            </div>
                            <h3 class="text-xl font-medium text-white mb-2">No Rooms Available</h3>
                            <p class="text-white/50">Be the first to create a new room!</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12 mb-12">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-white/5 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/50" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
                </svg>
            </div>
            <h3 class="text-xl font-medium text-white mb-2">No Rooms Available</h3>
            <p class="text-white
                    /50">Please log in to view available rooms.</p>
        {% endif %}
        </div>


        <!-- Features -->
