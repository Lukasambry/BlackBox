{% extends 'base.html.twig' %}

{% block title %}Secret{% endblock %}

{% block body %}
    <h1>Secret</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ secret.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ secret.content }}</td>
            </tr>
            <tr>
                <th>Votes</th>
                <td>{{ secret.votes }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ secret.createdAt ? secret.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ secret.updatedAt ? secret.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_secret_index') }}">back to list</a>

    <a href="{{ path('app_secret_edit', {'id': secret.id}) }}">edit</a>

    {{ include('secret/_delete_form.html.twig') }}
{% endblock %}
