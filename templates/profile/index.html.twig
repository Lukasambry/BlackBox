{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
<div class="relative min-h-screen">
    <!-- Background Noise -->
    <div class="absolute inset-0 bg-[radial-gradient(#262626_1px,transparent_1px)] [background-size:16px_16px] opacity-20 pointer-events-none"></div>

    <!-- Content Container -->
    <div class="container py-12">
        <!-- Profile Header -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary mb-4">
                <span class="text-3xl font-bold text-primary-foreground">{{ app.user.nickname|slice(0, 1)|upper }}</span>
            </div>
            <h1 class="text-3xl font-bold text-foreground mb-2">
                {{ app.user.nickname }}'s Profile
            </h1>
            <p class="text-muted-foreground">{{ app.user.email }}</p>
        </div>

        <!-- Statistics and Account Info Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <!-- Statistics Card -->
            <div class="bg-card text-card-foreground border border-border rounded-lg p-6">
                <h2 class="text-xl font-semibold mb-4 text-foreground">
                    Your Statistics
                </h2>
                <div class="space-y-4">
                    <div class="flex justify-between items-center p-3 bg-accent/30 rounded-md">
                        <span class="text-muted-foreground">Total Stories</span>
                        <span class="font-medium text-foreground">
                            {{ app.user.secrets is empty ? '0' : app.user.secrets|length }}
                        </span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-accent/30 rounded-md">
                        <span class="text-muted-foreground">Total Votes</span>
                        <span class="font-medium text-foreground">
                            {{ app.user.votes is empty ? '0' : app.user.votes|length }}
                        </span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-accent/30 rounded-md">
                        <span class="text-muted-foreground">Rooms Joined</span>
                        <span class="font-medium text-foreground">
                            {{ app.user.rooms is empty ? '0' : app.user.rooms|length }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Account Settings Card -->
            <div class="bg-card text-card-foreground border border-border rounded-lg p-6">
                <h2 class="text-xl font-semibold mb-4 text-foreground">
                    Account Settings
                </h2>
                <div class="space-y-4">
                    <!-- Email Verification Status -->
                    <div class="flex justify-between items-center p-3 bg-accent/30 rounded-md">
                        <span class="text-muted-foreground">Email Status</span>
                        {% if app.user.isVerified %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-500/10 text-green-500 border border-green-500/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Verified
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-500/10 text-yellow-500 border border-yellow-500/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                                Pending
                            </span>
                        {% endif %}
                    </div>

                    <!-- User Role -->
                    <div class="flex justify-between items-center p-3 bg-accent/30 rounded-md">
                        <span class="text-muted-foreground">Account Type</span>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {% if is_granted('ROLE_ADMIN') %}bg-primary/10 text-primary{% else %}bg-secondary/10 text-secondary-foreground{% endif %}">
                            {% if is_granted('ROLE_ADMIN') %}
                                Administrator
                            {% else %}
                                Member
                            {% endif %}
                        </span>
                    </div>

                    <!-- Member Since -->
                    <div class="flex justify-between items-center p-3 bg-accent/30 rounded-md">
                        <span class="text-muted-foreground">Member Since</span>
                        <span class="text-foreground">{{ "now"|date("M Y") }}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Actions -->
        <div class="space-y-4">
            <!-- Edit Profile -->
            <a href="{{ path('app_profile_edit') }}" class="block w-full">
                <div class="w-full p-4 bg-accent/10 border border-border rounded-lg hover:bg-accent/20 transition-colors flex items-center justify-center space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    <span class="text-primary">Edit Profile</span>
                </div>
            </a>

            <!-- Export Logs -->
            <a href="{{ path('app_user_logs_export') }}" class="block w-full">
                <div class="w-full p-4 bg-accent/10 border border-border rounded-lg hover:bg-accent/20 transition-colors flex items-center justify-center space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="text-blue-500">Export Activity Logs</span>
                </div>
            </a>

            <!-- Delete Account -->
            <form method="post" action="{{ path('app_profile_delete') }}" onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');" class="w-full">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-profile') }}">
                <button type="submit" class="w-full">
                    <div class="w-full p-4 bg-accent/10 border border-border rounded-lg hover:bg-destructive/10 transition-colors flex items-center justify-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-destructive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        <span class="text-destructive">Delete Account</span>
                    </div>
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}