{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto py-8 px-4">
        <h1 class="text-3xl font-bold mb-8">Edit Profile</h1>

        {{ form_start(form, {'attr': {'class': 'shadow rounded-lg p-6'}}) }}
        <div class="mb-4">
            {{ form_label(form.nickname, null, {'label_attr': {'class': 'block text-white text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.nickname, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.nickname) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-white text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="btn-primary hover:bg-violet-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Save Changes
            </button>
            <a href="{{ path('app_profile_show') }}" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}