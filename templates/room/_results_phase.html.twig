<div id="resultsSection" class="{% if room.currentState != 'finished' %}hidden{% endif %}">
    <div class="space-y-8">
        <!-- Winner Section -->
        <div class="relative rounded-2xl backdrop-blur-xl overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/20 to-fuchsia-500/20"></div>
            <div class="relative p-8">
                <h2 class="text-3xl font-bold text-center mb-8">
                    <span class="bg-gradient-to-r from-indigo-400 to-fuchsia-400 text-transparent bg-clip-text">
                        üèÜ Winning Story üèÜ
                    </span>
                </h2>

                <div class="p-8 rounded-xl bg-white/5 border border-white/10 mb-8">
                    <p id="winningAnecdote" class="text-xl text-center leading-relaxed text-white"></p>
                </div>

                <div class="flex items-center justify-center gap-8">
                    <div class="text-center">
                        <div class="text-white/50 text-sm">Author</div>
                        <div id="winningAuthor" class="text-lg font-medium text-white"></div>
                    </div>
                    <div class="text-center">
                        <div class="text-white/50 text-sm">Score</div>
                        <div class="flex items-center gap-4 font-medium">
                            <span class="text-emerald-400">+<span id="positiveVotes">0</span></span>
                            <span class="text-rose-400">-<span id="negativeVotes">0</span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- All Stories -->
        <div class="relative rounded-2xl backdrop-blur-xl overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 to-fuchsia-500/10"></div>
            <div class="relative p-8">
                <h3 class="text-2xl font-bold text-white mb-6">All Stories</h3>
                <div class="space-y-4" id="allSubmissions"></div>
            </div>
        </div>

        <!-- New Game Button -->
        {% if is_granted('ROOM_START', room) %}
            <div class="text-center">
                <button id="startNewGame" class="group px-8 py-4 rounded-xl bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-rose-500 text-white font-medium hover:shadow-lg hover:shadow-white/10 transition-all inline-flex items-center gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Start New Game
                </button>
            </div>
        {% endif %}
    </div>
</div>