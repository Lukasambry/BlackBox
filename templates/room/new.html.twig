{% extends 'base.html.twig' %}

{% block title %}Create New Game Room{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <div class="card p-8">
            <h1 class="text-3xl font-bold mb-8 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3 text-purple-500" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Create a New Game Room
            </h1>

            {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
            <div class="space-y-6 p-6 bg-gray-800 rounded-lg">
                <h2 class="text-xl font-semibold text-purple-400 mb-4">Basic Settings</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.name, 'Room Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.name, {'attr': {
                            'class': 'mt-1 block w-full rounded-lg bg-gray-700 border-gray-600 text-white p-3',
                            'placeholder': 'Enter an creative room name...',
                            'value': (app.user.nickname ~ "'s Room")
                        }}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div>
                        {{ form_label(form.maxCapacity, 'Player Capacity', {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
                        <div class="relative">
                            {{ form_widget(form.maxCapacity, {'attr': {
                                'class': 'mt-1 block w-full rounded-lg bg-gray-700 border-gray-600 text-white p-3',
                                'min': '2',
                                'max': '10',
                                'value': '4'
                            }}) }}
                            <div class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400">players</div>
                        </div>
                        <p class="text-sm text-gray-400 mt-1">Recommended: 4-8 players for optimal experience</p>
                        {{ form_errors(form.maxCapacity) }}
                    </div>
                </div>

                <div class="mt-6">
                    <label class="relative inline-flex items-center cursor-pointer">
                        {{ form_widget(form.isPrivate, {'attr': {
                            'class': 'sr-only peer'
                        }}) }}
                        <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-800 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                        <span class="ms-3 text-sm font-medium text-gray-300">Private Room</span>
                    </label>
                    <p class="text-sm text-gray-400 mt-1">Private rooms require an invitation link to join</p>
                </div>
            </div>

            <div class="p-6 bg-gray-800/50 rounded-lg border border-dashed border-gray-700">
                <h2 class="text-xl font-semibold text-gray-400 mb-4">Coming Soon</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="opacity-50 pointer-events-none">
                        <h3 class="text-sm font-medium text-gray-300 mb-2">Time Settings</h3>
                        <select class="mt-1 block w-full rounded-lg bg-gray-700 border-gray-600 text-white p-3" disabled>
                            <option>Standard (30s per round)</option>
                            <option>Extended (45s per round)</option>
                            <option>Quick (20s per round)</option>
                            <option>Custom...</option>
                        </select>
                    </div>

                    <div class="opacity-50 pointer-events-none">
                        <h3 class="text-sm font-medium text-gray-300 mb-2">Theme Category</h3>
                        <select class="mt-1 block w-full rounded-lg bg-gray-700 border-gray-600 text-white p-3" disabled>
                            <option>Random (All Categories)</option>
                            <option>Funny Moments</option>
                            <option>Travel Stories</option>
                            <option>Work Life</option>
                            <option>Childhood Memories</option>
                        </select>
                    </div>

                    <div class="opacity-50 pointer-events-none">
                        <h3 class="text-sm font-medium text-gray-300 mb-2">Game Mode</h3>
                        <select class="mt-1 block w-full rounded-lg bg-gray-700 border-gray-600 text-white p-3" disabled>
                            <option>Classic</option>
                            <option>Teams</option>
                            <option>Tournament</option>
                        </select>
                    </div>

                    <div class="opacity-50 pointer-events-none">
                        <h3 class="text-sm font-medium text-gray-300 mb-2">Special Rules</h3>
                        <div class="space-y-2">
                            <label class="flex items-center">
                                <input type="checkbox" disabled class="rounded bg-gray-700 border-gray-600 text-purple-600 focus:ring-purple-500">
                                <span class="ml-2 text-sm text-gray-300">Allow Spectators</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" disabled class="rounded bg-gray-700 border-gray-600 text-purple-600 focus:ring-purple-500">
                                <span class="ml-2 text-sm text-gray-300">Multiple Rounds</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <p class="text-sm text-gray-400">More customization options will be available in future updates!</p>
                </div>
            </div>

            <div class="flex justify-between items-center pt-4">
                <a href="{{ path('app_room_index') }}" class="text-gray-400 hover:text-white transition-colors flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
                    </svg>
                    Back to rooms
                </a>
                <button type="submit" class="btn-primary px-8 py-3 rounded-lg flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create Room
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}