<div id="votingSection" class="{% if room.currentState != 'voting' %}hidden{% endif %}">
    <div class="relative rounded-2xl backdrop-blur-xl overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 to-fuchsia-500/10"></div>
        <div class="relative p-8">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold text-white">Vote Time!</h2>
                <span class="px-4 py-2 rounded-full bg-white/10 text-white/70 text-sm">
                   Story <span id="currentVoteNumber">{{ room.currentVotingSecretIndex + 1 }}</span> of <span id="totalVotes">{{ room.secrets|length }}</span>
               </span>
            </div>

            <div id="votingProgressBarContainer" class="w-full bg-white/10 rounded-full h-2 mb-8">
                <div id="votingProgressBar"
                     class="bg-gradient-to-r from-indigo-500 to-fuchsia-500 h-2 rounded-full transition-all duration-1000"
                     style="width: 100%">
                </div>
            </div>

            <div class="p-8 rounded-xl bg-white/5 border border-white/10 mb-8">
                <p id="secretContent" class="text-xl text-center leading-relaxed text-white">
                    {{ room.currentVotingSecret ? room.currentVotingSecret.content : 'Loading...' }}
                </p>
            </div>

            <div id="votingButtons" class="flex justify-center gap-6">
                <button id="votePositive"
                        class="flex-1 max-w-xs px-6 py-4 rounded-xl bg-gradient-to-r from-emerald-500 to-green-500 flex items-center justify-center gap-3
                               hover:shadow-lg hover:shadow-emerald-500/20 transition-all
                               disabled:opacity-50 disabled:cursor-not-allowed">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
                    </svg>
                    <span class="font-medium">Love It!</span>
                </button>

                <button id="voteNegative"
                        class="flex-1 max-w-xs px-6 py-4 rounded-xl bg-gradient-to-r from-rose-500 to-red-500 flex items-center justify-center gap-3
                               hover:shadow-lg hover:shadow-rose-500/20 transition-all
                               disabled:opacity-50 disabled:cursor-not-allowed">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018c.163 0 .326.02.485.06L17 4m-7 10v2a2 2 0 002 2h.095c.5 0 .905-.405.905-.905 0-.714.211-1.412.608-2.006L17 13V4m-7 10h2m5 6h2a2 2 0 002-2v-6a2 2 0 00-2-2h-2.5"/>
                    </svg>
                    <span class="font-medium">Not Really</span>
                </button>
            </div>

            <div class="text-center text-white/50 mt-6 text-sm">
                Choose wisely - your vote is final!
            </div>
        </div>
    </div>
</div>